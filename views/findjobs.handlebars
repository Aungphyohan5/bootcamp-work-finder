{{!-- search bar --}}
<div class="find-job">
  <div class="overlay">
    <form action="/search" class="field is-grouped searchInput">
      <p class="control is-expanded">
        <input class="input is-normal" name="term" type="search"
          placeholder="Front End Developer,Full Stack Developer,Project Manager">
      </p>
      <p class="control">
        <input class="button is-info" , type="submit" value="Search">
      </p>
    </form>
  </div>
</div>
  {{!-- Using search bar --}}
  <div class="columns is-centered ">
    {{#each plainJobSearch}}
    <div class="column">
      <div class="card-content mx-7 searched-job has-text-left ">
        <div class="media">
          <div class="media-content">
            <p class="title is-4">{{job_title}}</p>
            <hr>
            <p class="subtitle is-4">Company: {{company.company_name}}</p>
          </div>
        </div>
        <br>
        <div class="content">
          <p>Salary: ${{salary}}</p>
          <p>{{job_description}}</p>
          <p class="is-underlined is-size-5">Job Requirements</p>
          <p class="has-text-weight-bold is-size-6 tags">{{this.skill_tags}}</p>
          <a href="mailto: {{company.company_email}}"><button class="button is-info">
              Apply Now
            </button></a>
        </div>
      </div>
    </div>
  </div>
  {{else}}
  <div class="column my-6">
    <p class="no-jobs findJob-msg">
      <img src="https://user-images.githubusercontent.com/112873819/220351063-16e019b7-ad3d-4290-a81e-79da95476f09.png"
        width="50" height="28">
    </p>
    <h2 class="findJob-msg">Use search bar to find a job.</h2>
  </div>
  {{/each}}