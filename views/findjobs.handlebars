{{!-- job search field --}}
<div class="jobSearch">
  {{!-- {{#if messages.info}}
  <div class="alert alert-success">{{messages.info}}</div>
  {{/if}} --}}
  <form action="/search" class="field is-grouped searchInput">
    <p class="control is-expanded">
      <input class="input is-normal" name="term" type="search"
        placeholder="Front End Developer,Full Stack Developer,Project Manager">
    </p>
    <p class="control">
      <input class="button is-info" , type="submit" value="Search">
    </p>
  </form>


  {{!-- display searched jobs --}}
  {{#each plainJobPostings as |job| }}
  <div class="box has-background-white has-text-centered has-text-black jobs-box">
    <h1>{{this.job_title}}</h1>
    <h2>Company: {{this.company.company_name}}</h2>
    <p>Email: {{this.company.company_email}}</p>
    <p>Salary: ${{this.salary}}</p>
    <p>{{this.job_description}}</p>
  </div>
  {{/each}}
</div>
</div>


{{!-- Using search bar --}}
