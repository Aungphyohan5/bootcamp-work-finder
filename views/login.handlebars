{{!-- log in --}}
<section class="hero is-fullheight login-bg">
    <div class="login-account">
        <form class="login-form">
            <div class="title">
                <h2 class="has-text-white"> Log in</h2>
            </div>

            <div class="field">
                <label for="user_email">Email</label>
                <input class="input is-primary" id="email-login" name="user_email" type="text"
                    placeholder="Email address">
            </div>

            <div class="field">
                <label for="user_password">Password</label>
                <input class="input is-primary" id="password-login" name="user_password" type="password"
                    placeholder="Password">
            </div>

            <div class="field mt-6">
                <button class="button is-black is-fullwidth" type="submit">Log in</button>
            </div>
            <div class="has-text-centered">
                <p class="is-size-7"> Don't have an account? <a href="/" class="has-text-primary">Sign
                        up</a>
                </p>
            </div>


        </form>

    </div>

    </div>
</section>

<script src="./js/login.js"></script>